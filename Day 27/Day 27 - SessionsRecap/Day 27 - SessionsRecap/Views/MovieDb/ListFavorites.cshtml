
@{
    ViewData["Title"] = "ListFavorites";
}
@model List<Movies>
<h1>ListFavorites</h1>

@if (Model != null)
{

    <table>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Year</th>
            <th>Director</th>
            <th>Lead</th>
        </tr>
        @foreach (Movies movie in Model)
        {
            <tr>
                <td>@movie.Title </td>
                <td>@movie.Category </td>
                <td>@movie.ReleaseDate.ToString() </td>
                <td>@movie.Director </td>
                <td>@movie.LeadActor </td>

                <td><a href="../MoviesDb/RemoveFromFavorites?id=@movie.Id" class="btn btn-Danger">Remove From Favorites!</a> </td>

            </tr>
        }
    </table>
}
