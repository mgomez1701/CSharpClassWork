@using EFCoreDAy28Ex1.Controllers.Context ;
@{
    ViewData["Title"] = "DepartmentIndex";
}
@model List<Department>
<h1>Departments</h1>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Type</th>
        <th>Budget</th>
    </tr>

    @foreach (Department department in Model)
    {

        <tr>
            <td>@department.Name</td>
            <td>@department.Location</td>
            <td>@department.Type</td>
            <td>@department.Budget</td>

            @*C.R.U.D. FUNCTIONS*@
            <td> <a href="../CompanyDb/UpdateDepartment?id=@department.DepartmentId" class="btn btn-primary">Update Database</a></td>
            <td> <a href="../CompanyDb/DeleteDepartment?id=@department.DepartmentId" class="btn btn-danger">Delete Department</a></td>
            <td> <a href="../CompanyDb/ListEmployeesByDepartment?id=@department.DepartmentId" class="btn btn-primary">List Employees</a></td>
        </tr>

    }
</table>
<td> <a href="../CompanyDb/AddDepartment" class="btn btn-primary">Add New Department!</a></td>


